<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MADGroup_Project" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/background</item>
        <item name="materialButtonStyle">@style/CustomButton</item>
        <item name="android:editTextColor">@color/textPrimary</item>
    </style>

    <style name="Theme.MADGroup_Project" parent="Base.Theme.MADGroup_Project" />
    <style name="CustomButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/button</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="rippleColor">@color/button_pressed</item>
    </style>
    <style name="NoAnimationTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintEnabled">false</item>
        <item name="boxStrokeColor">@color/textPrimary</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>